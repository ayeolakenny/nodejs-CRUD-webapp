<%- include('partials/header'); %>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="Title">Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label for="Image">Image</label>
            <input type="text" name="blog[image]" placeholder="image">
        </div>
        <div class="field">
            <label for="Blog COntent">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="blog post goes here"></textarea>
        </div>
        <input class="ui violet basic button big" type="submit">
    </form>
</div>
<%- include('partials/footer'); %>
